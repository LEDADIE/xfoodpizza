@page
@model xfoodpizza.Pages.Admin.Pizzas.IndexModel

@{
    ViewData["Title"] = "Administration des pizzas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Nouveau</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].vetarienne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].ingredients)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pizza) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vetarienne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ingredients)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PizzaID">Modifier</a> |
                @*<a asp-page="./Details" asp-route-id="@item.PizzaID">Details</a> |*@
                <a asp-page="./Delete" asp-route-id="@item.PizzaID">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
